<%- layout("/layouts/boilerplate.ejs") %>


<button class="back-button" onclick="goBack()">
  <i class="fas fa-arrow-left"></i>
</button>

<div class="listing-form-container">
  <div class="listing-form-wrapper">
    <div class="listing-form-header">
      <i class="fas fa-home"></i>
      <h2>Create New Listing</h2>
      <p>Share your property with potential tenants</p>
    </div>

    <form id="myForm" method="POST" action="/listings" novalidate class="needs-validation listing-form" enctype="multipart/form-data">
      <!-- User Profile Section -->
      <div class="page" id="page0">
        <div class="form-section">
          <div class="section-header">
            <i class="fas fa-user-circle"></i>
            <h4>Owner Profile</h4>
          </div>
          
          <div class="form-group">
            <label for="userName" class="form-label">
              <i class="fas fa-user"></i>
              Full Name
            </label>
            <input
              name="listing[userName]"
              type="text"
              placeholder="Enter your full name"
              class="form-control"
              required
            />
            <div class="invalid-feedback">
              Please provide your full name.
            </div>
          </div>

          <div class="form-group">
            <label for="phoneNumber" class="form-label">
              <i class="fas fa-phone"></i>
              Phone Number
            </label>
            <input
              name="listing[phoneNumber]"
              type="tel"
              pattern="[0-9]{10}"
              placeholder="Enter 10-digit phone number"
              class="form-control"
              required
            />
            <div class="invalid-feedback">
              Please provide a valid 10-digit phone number.
            </div>
          </div>

          <div class="form-group">
            <label for="email" class="form-label">
              <i class="fas fa-envelope"></i>
              Email Address
            </label>
            <input
              name="listing[email]"
              type="email"
              placeholder="Enter your email address"
              class="form-control"
              required
            />
            <div class="invalid-feedback">
              Please provide a valid email address.
            </div>
          </div>

          <div class="form-group">
            <label for="profileImage" class="form-label">
              <i class="fas fa-image"></i>
              Profile Image
            </label>
            <div class="custom-file-upload">
              <input
                type="file"
                id="profileImageInput"
                name="listing[profileImage]"
                accept="image/*"
                class="form-control"
                required
              />
              <div class="profile-image-preview" id="profileImagePreview"></div>
            </div>
            <div class="invalid-feedback">
              Please select a profile image.
            </div>
          </div>

          <div class="form-group">
            <label for="adharCard" class="form-label">
              <i class="fas fa-id-card"></i>
              Aadhar Card Number
            </label>
            <input
              name="listing[adharCard]"
              type="text"
              pattern="[0-9]{12}"
              placeholder="Enter 12-digit Aadhar number"
              class="form-control"
              required
            />
            <div class="invalid-feedback">
              Please provide a valid 12-digit Aadhar number.
            </div>
          </div>

          <div class="address-section">
            <label class="form-label">
              <i class="fas fa-map-marker-alt"></i>
              Address Details
            </label>
            <div class="form-row">
              <div class="form-group col-md-12">
                <input
                  name="listing[address][street]"
                  type="text"
                  placeholder="Street Address"
                  class="form-control"
                  required
                />
                <div class="invalid-feedback">
                  Please provide street address.
                </div>
              </div>
              <div class="form-group col-md-6">
                <input
                  name="listing[address][city]"
                  type="text"
                  placeholder="City"
                  class="form-control"
                  required
                />
                <div class="invalid-feedback">
                  Please provide city.
                </div>
              </div>
              <div class="form-group col-md-6">
                <input
                  name="listing[address][state]"
                  type="text"
                  placeholder="State"
                  class="form-control"
                  required
                />
                <div class="invalid-feedback">
                  Please enter a valid state.
                </div>
              </div>
              <div class="form-group col-md-6">
                <input
                  name="listing[address][zipCode]"
                  type="text"
                  pattern="[0-9]{6}"
                  placeholder="Enter 6-digit ZIP code"
                  class="form-control"
                  required
                />
                <div class="invalid-feedback">
                  Please enter a valid 6-digit ZIP code.
                </div>
              </div>
            </div>
            <div class="form-group">
              <label for="country" class="form-label">
                <i class="fas fa-globe"></i>
                Country
              </label>
              <input
                name="listing[country]"
                type="text"
                placeholder="Enter country"
                class="form-control"
                value="India"
                required
              />
              <div class="invalid-feedback">
                Please enter a valid country.
              </div>
            </div>
          </div>
        </div>

        <div class="button-group">
          <button type="button" class="btn btn-primary next-btn" onclick="nextPage(1)">
            Next <i class="fas fa-arrow-right"></i>
          </button>
        </div>
      </div>

      <!-- Original Property Details Page -->
      <div class="page" id="page1">
        <div class="form-section">
          <div class="section-header">
            <i class="fas fa-info-circle"></i>
            <h4>Property Details</h4>
          </div>
          
          <div class="form-group">
            <label for="title" class="form-label">
              <i class="fas fa-heading"></i>
              Home Title
            </label>
            <input
              name="listing[title]"
              type="text"
              placeholder="Enter a descriptive title for your property"
              class="form-control"
              required
            />
            <div class="invalid-feedback">
              Please provide a title for the property.
            </div>
          </div>

          <div class="form-row">
            <div class="form-group col-md-6">
              <label for="rent" class="form-label">
                <i class="fas fa-rupee-sign"></i>
                Monthly Rent
              </label>
              <div class="input-group">
                <span class="input-group-text">₹</span>
                <input
                  name="listing[rent]"
                  type="number"
                  min="0"
                  step="100"
                  class="form-control"
                  required
                />
              </div>
              <div class="invalid-feedback">
                Please provide a valid rent amount.
              </div>
            </div>

            <div class="form-group col-md-6">
              <label for="pre_reservation_amount" class="form-label">
                <i class="fas fa-money-bill-wave"></i>
