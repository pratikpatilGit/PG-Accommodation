          <div class="form-row">
            <div class="form-group col-md-8">
              <label for="location" class="form-label">
                <i class="fas fa-map-marker-alt"></i>
                Location
              </label>
              <input
                name="listing[location]"
                type="text"
                placeholder="Enter property location"
                class="form-control"
                required
              />
              <div class="invalid-feedback">Please enter a valid location.</div>
            </div>
          </div>

          <div class="form-group">
            <label for="capacity">
              <i class="fas fa-users"></i>
              Number of Guests
            </label>
            <input
              name="listing[capacity]"
              id="capacity"
              type="number"
              class="form-control"
              placeholder="Enter number of guests"
              min="1"
              required
            />
          </div>

          <div class="form-group">
            <label for="bedrooms">
              <i class="fas fa-door-open"></i>
              Number of Bedrooms
            </label>
            <input
              name="listing[bedrooms]"
              id="bedrooms"
              type="number"
              class="form-control"
              placeholder="Enter number of bedrooms"
              min="1"
              required
            />
          </div>

          <div class="form-group">
            <label for="bathrooms">
              <i class="fas fa-bath"></i>
              Number of Bathrooms
            </label>
            <input
              name="listing[bathrooms]"
              id="bathrooms"
              type="number"
              class="form-control"
              placeholder="Enter number of bathrooms"
              min="1"
              required
            />
          </div>

          <div class="form-group">
            <label for="availability">
              <i class="fas fa-check-circle"></i>
              PG Availability
            </label>
            <div class="availability-options">
              <div class="form-check">
                <input
                  class="form-check-input"
                  type="radio"
                  name="listing[availability]"
                  id="available"
                  value="true"
                  checked
                />
                <label class="form-check-label" for="available">
                  Available
                </label>
              </div>
              <div class="form-check">
                <input
                  class="form-check-input"
                  type="radio"
                  name="listing[availability]"
                  id="unavailable"
                  value="false"
                />
                <label class="form-check-label" for="unavailable">
                  Not Available
                </label>
              </div>
            </div>
          </div>

          <div class="form-group">
            <label for="amenities" class="form-label">
              <i class="fas fa-list"></i>
              Amenities
            </label>
            <div class="amenities-grid">
              <div class="amenity-item">
                <input type="checkbox" name="listing[amenities][]" value="AC" id="ac" class="amenity-checkbox">
                <label for="ac">AC</label>
              </div>
              <div class="amenity-item">
                <input type="checkbox" name="listing[amenities][]" value="WiFi" id="wifi" class="amenity-checkbox">
                <label for="wifi">WiFi</label>
              </div>
              <div class="amenity-item">
                <input type="checkbox" name="listing[amenities][]" value="Parking" id="parking" class="amenity-checkbox">
                <label for="parking">Parking</label>
              </div>
              <div class="amenity-item">
                <input type="checkbox" name="listing[amenities][]" value="Kitchen" id="kitchen" class="amenity-checkbox">
                <label for="kitchen">Kitchen</label>
              </div>
              <div class="amenity-item">
                <input type="checkbox" name="listing[amenities][]" value="TV" id="tv" class="amenity-checkbox">
                <label for="tv">TV</label>
              </div>
              <div class="amenity-item">
                <input type="checkbox" name="listing[amenities][]" value="Laundry" id="laundry" class="amenity-checkbox">
                <label for="laundry">Laundry</label>
              </div>
              <div class="amenity-item">
                <input type="checkbox" name="listing[amenities][]" value="Security" id="security" class="amenity-checkbox">
                <label for="security">Security</label>
              </div>
              <div class="amenity-item">
                <input type="checkbox" name="listing[amenities][]" value="Gym" id="gym" class="amenity-checkbox">
                <label for="gym">Gym</label>
              </div>
              <div class="amenity-item">
                <input type="checkbox" name="listing[amenities][]" value="Hot Water" id="hotwater" class="amenity-checkbox">
