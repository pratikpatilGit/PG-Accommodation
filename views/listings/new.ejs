              </div>
              <div class="amenity-item">
                <input type="checkbox" name="listing[amenities][]" value="Study Table" id="studytable" class="amenity-checkbox">
                <label for="studytable">Study Table</label>
              </div>
              <div class="amenity-item">
                <input type="checkbox" name="listing[amenities][]" value="Wardrobe" id="wardrobe" class="amenity-checkbox">
                <label for="wardrobe">Wardrobe</label>
              </div>
              <div class="amenity-item">
                <input type="checkbox" name="listing[amenities][]" value="Bed" id="bed" class="amenity-checkbox">
                <label for="bed">Bed</label>
              </div>
              <div class="amenity-item">
                <input type="checkbox" name="listing[amenities][]" value="Meals" id="meals" class="amenity-checkbox">
                <label for="meals">Meals</label>
              </div>
              <div class="amenity-item">
                <input type="checkbox" name="listing[amenities][]" value="Housekeeping" id="housekeeping" class="amenity-checkbox">
                <label for="housekeeping">Housekeeping</label>
              </div>
              <div class="amenity-item">
                <input type="checkbox" name="listing[amenities][]" value="CCTV" id="cctv" class="amenity-checkbox">
                <label for="cctv">CCTV</label>
              </div>
              <div class="amenity-item">
                <input type="checkbox" name="listing[amenities][]" value="Power Backup" id="powerbackup" class="amenity-checkbox">
                <label for="powerbackup">Power Backup</label>
              </div>
              <div class="amenity-item">
                <input type="checkbox" name="listing[amenities][]" value="Water Purifier" id="waterpurifier" class="amenity-checkbox">
                <label for="waterpurifier">Water Purifier</label>
              </div>
              <div class="amenity-item">
                <input type="checkbox" name="listing[amenities][]" value="Common Area" id="commonarea" class="amenity-checkbox">
                <label for="commonarea">Common Area</label>
              </div>
            </div>
            <div class="invalid-feedback">Please select at least one amenity.</div>
          </div>
        </div>

        <div class="button-group">
          <button type="button" class="btn btn-primary next-btn" onclick="nextPage(2)">
            <i class="fas fa-arrow-right"></i>
            Next
          </button>
        </div>
      </div>

      <div class="page" id="page2">
        <div class="form-section">
          <div class="section-header">
            <i class="fas fa-image"></i>
            <h4>Description and Images</h4>
          </div>

          <div class="form-group">
            <label for="description" class="form-label">
              <i class="fas fa-align-left"></i>
              Description
            </label>
            <textarea
              name="listing[description]"
              placeholder="Describe your property in detail..."
              class="form-control"
              rows="5"
              required
            ></textarea>
            <div class="invalid-feedback">
              Please provide a description of the property.
            </div>
          </div>

          <div class="form-group">
            <label class="form-label">
              <i class="fas fa-camera"></i>
              Property Images
            </label>
            <div id="imageInputArea" class="image-upload-area">
              <i class="fas fa-cloud-upload-alt"></i>
              <p>Drag & drop images here or click to browse</p>
              <span class="upload-hint">Maximum 5 images allowed</span>
              <input
                type="file"
                id="imageInput"
                name="listing[image]"
                accept="image/*"
                multiple
                class="d-none"
                required
              />
            </div>
            <div id="selectedImagesContainer" class="selected-images-container"></div>
          </div>
        </div>

        <div class="button-group">
          <button type="button" class="btn btn-secondary prev-btn" onclick="prevPage(2)">
            <i class="fas fa-arrow-left"></i>
            Previous
          </button>
          <button type="button" class="btn btn-primary next-btn" onclick="nextPage(3)">
            <i class="fas fa-arrow-right"></i>
            Next
          </button>
        </div>
      </div>

      <div class="page" id="page3">
        <div class="form-section">
          <div class="section-header">
            <i class="fas fa-check-circle"></i>
            <h4>Confirmation</h4>
          </div>

          <div class="confirmation-details">
            <h3>Confirmation Details</h3>
            <div class="confirmation-content">
              <div class="confirmation-item">
                <i class="fas fa-check-circle"></i>
                <span>Your listing will be reviewed within 24 hours</span>
              </div>
              <div class="confirmation-item">
                <i class="fas fa-check-circle"></i>
                <span>You'll receive an email confirmation once approved</span>
              </div>
              <div class="confirmation-item">
                <i class="fas fa-check-circle"></i>
                <span>You can edit your listing anytime after approval</span>
              </div>
            </div>
          </div>
        </div>

        <div class="button-group">
          <button type="button" class="btn btn-secondary prev-btn" onclick="prevPage(3)">
            <i class="fas fa-arrow-left"></i>
            Previous
          </button>
          <button type="submit" class="btn btn-success submit-btn">
            <i class="fas fa-check"></i>
            Submit Listing
          </button>
        </div>
      </div>
    </form>
    <div id="message" class="message"></div>
  </div>
</div>

<script>
  let currentPage = 0;
  const pages = document.querySelectorAll(".page");
  const form = document.getElementById("myForm");
  const imageInput = document.getElementById("imageInput");
  const imageInputArea = document.getElementById("imageInputArea");
  const imagePreviewsContainer = document.getElementById("imagePreviews");
  const message = document.getElementById("message");
  const profileImageInput = document.getElementById('profileImageInput');
  const profileImagePreview = document.getElementById('profileImagePreview');

  profileImageInput.addEventListener('change', function(event) {
    const file = event.target.files[0];
    if (file) {
      const reader = new FileReader();
      reader.onload = function(e) {
        profileImagePreview.innerHTML = `
          <img src="${e.target.result}" alt="Profile Preview" style="max-width: 200px; max-height: 200px; margin-top: 10px;">
        `;
      };
      reader.readAsDataURL(file);
    } else {
      profileImagePreview.innerHTML = '';
    }
  });

  function showPage(pageNumber) {
    pages.forEach((page) => page.classList.remove("active"));
    document.getElementById(`page${pageNumber}`).classList.add("active");
    currentPage = pageNumber;

    if (currentPage === 3) {
      displayConfirmation();
    }
  }

  function nextPage(pageNumber) {
    const currentPageElement = document.querySelector('.page.active');
    const nextPageElement = document.getElementById(`page${pageNumber}`);
    
    // Validate current page fields before proceeding
    const currentFields = currentPageElement.querySelectorAll('input[required], select[required], textarea[required]');
    let isValid = true;
    
    currentFields.forEach(field => {
      if (!field.checkValidity()) {
        field.classList.add('is-invalid');
        isValid = false;
      } else {
        field.classList.remove('is-invalid');
      }
    });

    if (!isValid) {
      return;
    }

    currentPageElement.classList.remove('active');
    nextPageElement.classList.add('active');
    currentPage = pageNumber;
  }

  function prevPage(pageNumber) {
    showPage(pageNumber);
  }

  imageInputArea.addEventListener("click", () => {
    const selectedImagesContainer = document.getElementById('selectedImagesContainer');
    const existingImages = selectedImagesContainer.querySelectorAll('.selected-image-item');
    if (existingImages.length < 5) {
      imageInput.click();
    } else {
      message.textContent = "Maximum number of images reached.";
      message.classList.remove("text-success");
      message.classList.add("text-danger");
    }
  });

  imageInputArea.addEventListener("dragover", (event) => {
    event.preventDefault();
    imageInputArea.classList.add("dragover");
  });

  imageInputArea.addEventListener("dragleave", () => {
    imageInputArea.classList.remove("dragover");
  });

  imageInputArea.addEventListener("drop", (event) => {
    event.preventDefault();
    imageInputArea.classList.remove("dragover");
    imageInput.files = event.dataTransfer.files;
    handleFileChange(event);
  });

  imageInput.addEventListener("change", handleFileChange);

  function handleFileChange(event) {
    const files = event.target.files;
    const selectedImagesContainer = document.getElementById('selectedImagesContainer');
    const existingImages = selectedImagesContainer.querySelectorAll('.selected-image-item');
    const existingCount = existingImages.length;
    const maxNewImages = 5 - existingCount;

    if (files.length > maxNewImages) {
      message.textContent = `You can only upload ${maxNewImages} more image${maxNewImages === 1 ? '' : 's'}.`;
      message.classList.remove("text-success");
      message.classList.add("text-danger");
      imageInput.value = "";
      return;
    } else {
      message.textContent = "";
      message.classList.remove("text-danger");
      message.classList.remove("text-success");
    }

    // Keep track of the current index for new images
    let currentIndex = existingCount;

    for (let i = 0; i < files.length; i++) {
      const file = files[i];
      const reader = new FileReader();

      reader.onload = (e) => {
        const imageItem = document.createElement("div");
        imageItem.classList.add("selected-image-item");

        const img = document.createElement("img");
        img.src = e.target.result;
        img.alt = `Selected Image ${currentIndex + 1}`;

        const deleteButton = document.createElement("button");
        deleteButton.classList.add("delete-image-btn");
        deleteButton.innerHTML = '<i class="fas fa-times"></i>';

        deleteButton.addEventListener("click", () => {
          imageItem.remove();
          
          // Update the file input
          const dt = new DataTransfer();
          const inputFiles = imageInput.files;
          for (let j = 0; j < inputFiles.length; j++) {
            if (i !== j) {
              dt.items.add(inputFiles[j]);
            }
          }
          imageInput.files = dt.files;

          if (imageInput.files.length === 0) {
            message.textContent = "";
          }
          
          // Update the upload area message
          updateUploadArea();
        });

        imageItem.appendChild(img);
        imageItem.appendChild(deleteButton);
        selectedImagesContainer.appendChild(imageItem);
        currentIndex++;
      };

      reader.readAsDataURL(file);
    }
  }

  // Update the image input area to show remaining slots
  function updateUploadArea() {
    const selectedImagesContainer = document.getElementById('selectedImagesContainer');
    const existingImages = selectedImagesContainer.querySelectorAll('.selected-image-item');
    const remainingSlots = 5 - existingImages.length;
    
    const uploadHint = imageInputArea.querySelector('.upload-hint');
    if (remainingSlots > 0) {
      uploadHint.textContent = `${remainingSlots} more image${remainingSlots === 1 ? '' : 's'} allowed`;
      uploadHint.style.color = '#7f8c8d';
    } else {
      uploadHint.textContent = 'Maximum images reached';
      uploadHint.style.color = '#e74c3c';
    }
  }

  function displayConfirmation() {
    const formData = new FormData(document.getElementById("myForm"));
    const listingData = {
      title: formData.get("listing[title]"),
      description: formData.get("listing[description]"),
      image: formData.getAll("listing[image]"),
      price: formData.get("listing[rent]"),
      location: formData.get("listing[location]"),
      country: formData.get("listing[country]"),
      amenities: formData.getAll("listing[amenities]"),
      geometry: {
        type: "Point",
        coordinates: [0, 0]
      },
      // Add required user profile fields
      userName: formData.get("listing[userName]"),
      phoneNumber: formData.get("listing[phoneNumber]"),
      email: formData.get("listing[email]"),
      adharCard: formData.get("listing[adharCard]"),
      address: {
        street: formData.get("listing[address][street]"),
        city: formData.get("listing[address][city]"),
        state: formData.get("listing[address][state]"),
        zipCode: formData.get("listing[address][zipCode]")
      },
      // Handle profile image
      profileImage: {
        filename: formData.get("listing[profileImage]")?.name || "default-profile.jpg",
        url: formData.get("listing[profileImage]") ? URL.createObjectURL(formData.get("listing[profileImage]")) : "/images/default-profile.jpg"
      }
    };

    // Update coordinates if map is initialized
    if (map && marker) {
      const latLng = marker.getLatLng();
      listingData.geometry.coordinates = [latLng.lng, latLng.lat];
    }

    // Display confirmation details
    const confirmationDetails = document.getElementById("confirmationDetails");
    confirmationDetails.innerHTML = `
      <div class="confirmation-item">
        <i class="fas fa-user"></i>
        <div>
          <strong>Owner Name:</strong>
          <span>${listingData.userName}</span>
        </div>
      </div>
      <div class="confirmation-item">
        <i class="fas fa-phone"></i>
        <div>
          <strong>Phone Number:</strong>
          <span>${listingData.phoneNumber}</span>
        </div>
      </div>
      <div class="confirmation-item">
        <i class="fas fa-envelope"></i>
        <div>
          <strong>Email:</strong>
          <span>${listingData.email}</span>
        </div>
      </div>
      <div class="confirmation-item">
        <i class="fas fa-id-card"></i>
        <div>
          <strong>Aadhar Card:</strong>
          <span>${listingData.adharCard}</span>
        </div>
      </div>
      <div class="confirmation-item">
        <i class="fas fa-map-marker-alt"></i>
        <div>
